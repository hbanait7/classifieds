<%= form_for @book do |f| %>

  <%= f.label :title %><br />
  <%= f.text_field :title %><br /><br />

  <%= f.label :author %><br />
  <%= f.text_field :author %><br /><br />

  <%= f.label :price %><br />
  <%= f.text_field :price %><br /><br />

  <%= f.label :attachment, 'Image' %><br />
  <%= f.file_field :attachment %><br /><br />

  <%= f.label :details %><br />
  <%= f.text_area :details %><br /><br />

  <%= f.submit 'Place Ad', class: 'btn btn-success' %>

<% end %>