<%= form_for @house do |f| %>

  <%= f.label :price %><br />
  <%= f.number_field :price, min: 1 %><br /><br />

  <%= f.label :bedrooms %><br />
  <%= f.number_field :bedrooms, min: 1 %><br /><br />

  <%= f.label :bathrooms %><br />
  <%= f.number_field :bathrooms, min: 1 %><br /><br />

  <%= f.label :sqfeet %><br />
  <%= f.number_field :sqfeet, min: 1 %><br /><br />

  <%= f.label :details %><br />
  <%= f.text_area :details %><br /><br />

  <%= f.submit %>

<% end %>